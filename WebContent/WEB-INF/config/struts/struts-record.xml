<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
	"http://struts.apache.org/dtds/struts-2.5.dtd">

<struts> 
   
    <package name="record" namespace="/record" extends="struts-default">
        
        <action name="borrowBook" class="recordAction" method="borrowBook">
            <result name="success" type="redirectAction">
	            <param name="namespace">/book</param>
	            <param name="actionName">bookList</param>
            </result>
        </action>
        
        <!--2017.1.4 修正 jiaojiao.xiao start -->
        <action name="borrowSuccessConfirm" class="recordAction" method="borrowSuccessConfirm">
            <result name="success" type="redirectAction">personalRecordList</result>
        </action>
        
        <action name="returnBook" class="recordAction" method="returnBook">
            <result name="success" type="redirectAction">personalRecordList</result>
        </action>
         <!--2017.1.4 修正 jiaojiao.xiao end -->
         
        <action name="personalRecordList" class="recordAction" method="personalRecordList">
            <result name="success">/WEB-INF/views/record/myRecordList.jsp</result>
        </action>
        
        <action name="RecordList" class="recordAction" method="RecordList">
            <result name="success">/WEB-INF/views/record/recordList.jsp</result>
        </action>
    </package>
    
</struts>


