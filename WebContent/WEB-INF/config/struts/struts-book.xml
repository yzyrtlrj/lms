<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
	"http://struts.apache.org/dtds/struts-2.5.dtd">

<struts> 
   
    <package name="book" namespace="/book" extends="struts-default">
    
        
        <action name="bookList" class="bookAction" method="bookList">
            <result name="bookList">/WEB-INF/views/book/bookList.jsp</result>
        </action>
        
        <action name="manageBook" class="bookAction" method="bookList">
            <result name="bookList">/WEB-INF/views/book/manageBook.jsp</result>
        </action>
        
        <action name="bookDetail" class="bookAction" method="bookDetail">
            <result name="success">/WEB-INF/views/book/bookDetail.jsp</result>
        </action>
        
        <action name="searchBook" class="bookAction" method="searchBook">
            <result name="success">/WEB-INF/views/book/bookList.jsp</result>
        </action>
        
        
        <action name="updateBookInput" class="bookAction" method="updateBookInput">
            <result name="success">/WEB-INF/views/book/bookUpdate.jsp</result>
        </action>
        
        <action name="updateBook" class="bookAction" method="updateBook">
            <result name="success" type="chain">bookList</result>
        </action>
        
        <action name="deleteBook" class="bookAction" method="deleteBook">
            <result name="success" type="chain">bookList</result>
        </action>
        
        <action name="addBookInput" class="bookAction" method="addBookInput">
            <result name="success">/WEB-INF/views/book/bookAdd.jsp</result>
        </action>
        
        <action name="addBook" class="bookAction" method="addBook">
            <result name="success" type="chain">bookList</result>
        </action>

    </package>

    

</struts>


