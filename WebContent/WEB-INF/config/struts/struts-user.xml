<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
	"http://struts.apache.org/dtds/struts-2.5.dtd">

<struts> 
   
    <package name="user" namespace="/user" extends="struts-default">
    
        <!-- class: 指向的不是类名.action名了，使用spring之后，连接到user.xml文件，获取 -->
        <action name="login" class="userAction" method="login">
            <result name="success">/WEB-INF/views/common/Manage.jsp</result>  
            <result name="failure">/WEB-INF/views/user/userLogin.jsp</result>
        </action>
        
        <action name="logoff" class="userAction" method="logoff">
            <result name="success" type="redirect">/index.jsp</result>
        </action>
        
        
        <action name="userDetail" class="userAction" method="userDetail">
            <result name="success">/WEB-INF/views/user/userDetail.jsp</result>
            
        </action>
               
        
        <action name="showAllUsers" class="userAction" method="userList">
            <result name="success">/WEB-INF/views/user/userList.jsp</result>
            
        </action>
        
        <action name="addUserInput" class="userAction" method="addUserInput">
            <result name="success">/WEB-INF/views/user/userAdd.jsp</result>
        </action>
        
        <action name="addUser" class="userAction" method="addUser">
            <result name="success" type="chain">showAllUsers</result>
        </action>
        
        <action name="deleteUser" class="userAction" method="deleteUser">
            <result name="success" type="chain">showAllUsers</result>
        </action>
        
        <action name="updateUserInput" class="userAction" method="updateUserInput">
            <result name="success">/WEB-INF/views/user/userUpdate.jsp</result>
        </action>
        
        <action name="updateUser" class="userAction" method="updateUser">
            <result name="success" type="chain">showAllUsers</result>
        </action>


    </package>

    

</struts>


